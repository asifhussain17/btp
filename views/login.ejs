            box-sizing: border-box; 
            font-weight:bold;
            cursor: pointer;
        }
    
        .gr:hover{
            background-color: darkblue;
        }
    
    
        .sign {
            margin-bottom: 15px;
        }
    
        .sign a {
            display: inline-block;
            padding: 10px 30px;
            background-color: #42b72a;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            
        }
    
        .sign a:hover {
            background-color: green;
        }
    
        .myaw{
            height:130px;
        }
    
